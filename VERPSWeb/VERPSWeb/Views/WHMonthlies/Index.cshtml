@model IEnumerable<VERPSWeb.vwWHMonthly>

@{
    ViewBag.Title = "Working Hours";
}

<h3><b>@ViewBag.wh.FullName</b>, working hours during <b>@ViewBag.wh.RecYear - @ViewBag.wh.RecMonth</b></h3>

<table class="table">
    <tr>
        <td>
            <h5>Assigned Total WH: <b>@ViewBag.wh.AWH</b></h5>
        </td>
        <td>
            <h5>Total Time: <b>@ViewBag.wh.TotalWorkingTime</b></h5>
        </td>
        <td>
            <h5>Time Diff: <b>@ViewBag.wh.TimeDiff</b></h5>
        </td>
        <td>
            <h5>Total OT: <b>@ViewBag.wh.TotalOvertime</b></h5>
        </td>
    </tr>
</table>
    <table class="table">
        <caption><h3>Daily Working Hour Details</h3></caption>
        <tr>
            <th>
                Date
            </th>
            <th>
                Day
            </th>
            <th>
                Entry Time
            </th>
            <th>
                Exit Time
            </th>
            <th>
                AWH
            </th>
            <th>
                Total Time
            </th>
            <th>
                Time Diff
            </th>
            <th>
                OT Time
            </th>
            <th>
                Exception
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.WorkingDate.ToShortDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DayOfWeek)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EntryTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExitTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignedWorkingHour)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.TotalHours):@Html.DisplayFor(modelItem => item.TotalMinutes)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.HourDiff):@Html.DisplayFor(modelItem => item.MinuteDiff)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.AcceptedOTeHrs):@Html.DisplayFor(modelItem => item.AcceptedOTMin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Exception)
                </td>


                <td>

                    @Html.Raw(@Html.ActionLink("[replacetext]", "Edit", new { id = item.Id }).ToHtmlString().Replace("[replacetext]", "<img src=\"../../Content/Images/magnifier.png\" style=\"width:26px\" />"))


                </td>
            </tr>
        }
    </table>
